<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/linearLayout_person"
    android:background="@color/colorWhite"
    android:layout_marginTop="25dp">

    <ImageView
        android:id="@+id/avatar"
        android:src="@drawable/pat"
        android:layout_gravity="center_vertical"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

    <LinearLayout
        android:layout_marginStart="16dp"
        android:id="@+id/info_detail"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/SmallValueBold"
            android:id="@+id/txt_name"
            android:text="Phạm Anh Tuấn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/SmallLabel"
            android:ellipsize="end"
            android:lines="1"
            android:id="@+id/txt_email"
            android:text="phamanhtuan7939@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/button_detail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_navigate_next_24dp"
        android:layout_gravity="center"
        />

</LinearLayout>